# ==================== Neo4j 配置 ====================
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# ==================== MySQL 配置 ====================
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_USER=zero_ai
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=zero_ai

# ==================== Redis 配置 ====================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0


# ==================== Ollama Embedding 配置 ====================
OLLAMA_BASE_URL=http://your_ollama_host:port
OLLAMA_EMBEDDING_MODEL=quentinz/bge-large-zh-v1.5:latest

# ==================== JWT 配置 ====================
# 可使用命令生成：python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-change-in-production

# ==================== 默认管理员配置（可选）====================
# 首次启动时自动创建的管理员账户
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=your_admin_password
DEFAULT_ADMIN_EMAIL=admin@example.com

# ==================== Milvus 配置 ====================
MILVUS_HOST=your_milvus_host
MILVUS_PORT=19530
MILVUS_USERNAME=root
MILVUS_PASSWORD=your_milvus_password
# 是否启用 Milvus 向量存储
ENABLE_MILVUS=false

# ==================== 智能分块配置 ====================
ENABLE_SMART_CHUNKING=true
CHUNKING_QUALITY_THRESHOLD=70

# ==================== 质量评估配置 ====================
EXTRACTION_QUALITY_SAMPLE_SIZE=10
EXTRACTION_QUALITY_THRESHOLD=70
GRAPH_QUALITY_THRESHOLD=70
QUALITY_GATE_THRESHOLD=70
QUALITY_GATE_MAX_RETRIES=3

# ==================== LLM摘要配置 ====================
SUMMARY_QUALITY_THRESHOLD=60

# ==================== Episode处理配置 ====================
EPISODE_MAX_CONCURRENT=5

# ==================== Community配置 ====================
ENABLE_AUTO_COMMUNITY=true
COMMUNITY_MIN_ENTITIES=5
# Community构建超时时间（秒），默认180秒
COMMUNITY_BUILD_TIMEOUT=180.0

# ==================== Cognee配置 ====================
# Cognee章节模板生成阈值
# 章节数量 < 此阈值：为每个章节单独生成模板（方案2，更精确但成本高）
# 章节数量 >= 此阈值：为所有章节生成一个模板（方案1，成本低但可能不够精确）
COGNEE_SECTION_TEMPLATE_THRESHOLD=5

# ==================== DeepSeek API 配置 ====================
DEEPSEEK_API_KEY=your_deepseek_api_key
DEEPSEEK_API_BASE=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_TIMEOUT=30
DEEPSEEK_MAX_RETRIES=3

# ==================== Qwen API 配置 ====================
QWEN_API_KEY=your_qwen_api_key
QWEN_API_BASE=https://dashscope.aliyuncs.com
QWEN_MODEL=qwen-turbo
QWEN_TIMEOUT=30
QWEN_MAX_RETRIES=3

# ==================== Kimi API 配置 ====================
KIMI_API_KEY=your_kimi_api_key
KIMI_API_BASE=https://api.moonshot.cn
KIMI_MODEL=moonshot-v1-8k
KIMI_TIMEOUT=30
KIMI_MAX_RETRIES=3

